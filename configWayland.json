{
    "layer": "top",
    "position": "top",
    "height": 30,
    "modules-left": ["hyprland/workspaces"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["pulseaudio", "network", "battery", "clock"],
    "hyprland/workspaces": {
        "format": "{name}",
        "persistent-workspaces": {}
    },
    "clock": {
        "format": "{:%H:%M}"
    },
    
    "network": {
        "format": " {essid} ({signalStrength}%)",
        "format-disconnected": "睊",
        "on-click": "sh -c 'if nmcli radio wifi | grep -q on; then nmcli radio wifi off; else nmcli radio wifi on; fi'"
    },
    "pulseaudio": {
        "format": "{volume}%",
        "format-muted": "ﱝ 0%",
        "tooltip": false,
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%"
    },
    
    "battery": {
        "format": "{capacity}%",
        "format-icons": ["", "", "", "", ""],
        "format-charging": " {capacity}%",
        "on-click": "sh -c 'BATT=$(cat /sys/class/power_supply/*BAT*/capacity 2>/dev/null || echo unknown); notify-send \"Batería: $BATT%\"'"
    }
}
